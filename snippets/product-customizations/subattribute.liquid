<div class="product-customization-child-group-container mb-4" data-customization="{{ option.attribute.id }}" data-option="{{ option.id }}" style="display: none;">

    {%- assign customization = option.child_group -%}
    {%- assign subOption = option.id -%}

    {%- if group.input_type == 'select' -%}

        {% render 'product-customizations/select', group: group, subOption, showCustomizationPrice: showCustomizationPrice, showCustomizationTotalPrice: showCustomizationTotalPrice, showCustomizationStockBalance: showCustomizationStockBalance, inventoryPolicy: inventoryPolicy, isPreviewProduct: isPreviewProduct, unit: unit, inline: inline, highlightLabel: highlightLabel %}

    {%- elsif group.input_type == 'radio' -%}

        {% render 'product-customizations/radio', group: group, subOption, showCustomizationPrice: showCustomizationPrice, showCustomizationTotalPrice: showCustomizationTotalPrice, showCustomizationStockBalance: showCustomizationStockBalance, inventoryPolicy: inventoryPolicy, isPreviewProduct: isPreviewProduct, unit: unit, inline: inline, highlightLabel: highlightLabel, style: 'badge' %}

    {%- elsif group.input_type == 'checkbox' -%}

        {% render 'product-customizations/checkbox', group: group, subOption, showCustomizationPrice: showCustomizationPrice, showCustomizationTotalPrice: showCustomizationTotalPrice, showCustomizationStockBalance: showCustomizationStockBalance, inventoryPolicy: inventoryPolicy, isPreviewProduct: isPreviewProduct, unit: unit, inline: inline, highlightLabel: highlightLabel %}

    {%- elsif group.input_type == 'text' -%}

        {% render 'product-customizations/text', group: group, subOption, showCustomizationPrice: showCustomizationPrice, showCustomizationTotalPrice: showCustomizationTotalPrice, showCustomizationStockBalance: showCustomizationStockBalance, inventoryPolicy: inventoryPolicy, isPreviewProduct: isPreviewProduct, unit: unit, inline: inline, highlightLabel: highlightLabel %}

    {%- endif -%}

</div>